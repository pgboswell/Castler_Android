<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.castler.castler.RecordGameFragment"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/white_gradient">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="White player"
            android:id="@+id/textView"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
           />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select a player"
                android:id="@+id/white_name"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan code"
                    android:id="@+id/btn_scan_code_white"
                    android:drawableLeft="@drawable/ic_camera"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose..."
                    android:id="@+id/btn_choose_white_player"
                    android:minHeight="50dp" />

            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textOn="Win"
                    android:textOff="Win"
                    android:id="@+id/btn_white_win"
                    android:background="@drawable/left_button_selector"
                    android:checked="false"
                    android:nestedScrollingEnabled="true"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:minHeight="40dp" />

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textOn="Lose"
                    android:textOff="Lose"
                    android:id="@+id/btn_white_lose"
                    android:background="@drawable/middle_button_selector"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:minHeight="40dp" />

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textOn="Draw"
                    android:textOff="Draw"
                    android:id="@+id/btn_white_draw"
                    android:background="@drawable/right_button_selector"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:minHeight="40dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/black_gradient"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Black player"
            android:id="@+id/textView2"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select a player"
                android:id="@+id/black_name"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan code"
                    android:id="@+id/btn_scan_code_black"
                    android:drawableLeft="@drawable/ic_camera"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose..."
                    android:id="@+id/btn_choose_black_player"
                    android:minHeight="50dp" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textOn="Win"
                    android:textOff="Win"
                    android:id="@+id/btn_black_win"
                    android:background="@drawable/left_button_selector"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:minHeight="40dp" />

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textOn="Lose"
                    android:textOff="Lose"
                    android:id="@+id/btn_black_lose"
                    android:background="@drawable/middle_button_selector"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:minHeight="40dp" />

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textOn="Draw"
                    android:textOff="Draw"
                    android:id="@+id/btn_black_draw"
                    android:background="@drawable/right_button_selector"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:minHeight="40dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btn_submit"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>
